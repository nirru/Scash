<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    tools:context="com.oxilo.scash.RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/logo"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/content_vertical_margin"/>

            <ImageView
                android:id="@+id/doc_pic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/pro_pic"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/content_vertical_margin"/>

            <EditText
                android:id="@+id/name"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:cursorVisible="false"
                android:hint="name"/>

            <EditText
                android:id="@+id/email"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="Email"/>

            <EditText
                android:id="@+id/password"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:inputType="textPassword"
                android:hint="password"/>

            <EditText
                android:id="@+id/doc_specify"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="Speciality"/>

            <EditText
                android:id="@+id/doc_hos"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="Hospital"/>

            <EditText
                android:id="@+id/doc_tariff"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:inputType="number"
                android:hint="Consultancy Fee"/>

            <Spinner
                android:id="@+id/gender"
                style="@style/spinnertheme"
                android:prompt="@string/spinner_prompt"
                android:entries="@array/spinner_aray"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:background="@drawable/rounded_corner"/>

            <TextView
                android:id="@+id/doc_date_st"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="Start Date"/>

            <TextView
                android:id="@+id/doc_date_en"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="End Date"/>

            <TextView
                android:id="@+id/doc_time_st"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="Start Time"/>
            <TextView
                android:id="@+id/doc_time_end"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="End Time"/>


            <EditText
                android:id="@+id/mobile"
                style="@style/edit_text_style"
                android:visibility="gone"
                android:inputType="number"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="Mobile"/>

            <EditText
                android:id="@+id/adress"
                style="@style/edit_text_style"
                android:visibility="visible"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="Address"/>


            <RadioGroup
                android:id="@+id/radio"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor"
                    android:checked="true"
                    android:id="@+id/radioButton1" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pateint"
                    android:id="@+id/radioButton2" />
            </RadioGroup>

            <Button
                android:id="@+id/btn_signup"
                style="@style/button_style"
                android:text="SignUp"
                android:layout_marginTop="@dimen/content_vertical_margin"/>
        </LinearLayout>


    </ScrollView>



</RelativeLayout>
