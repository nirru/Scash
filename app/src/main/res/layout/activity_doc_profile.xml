<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    tools:context="com.oxilo.scash.RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor Profile"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/content_vertical_margin"/>

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/doc_pic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/pro_pic"
                android:scaleType="centerCrop"
                android:visibility="visible"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/content_vertical_margin"/>

            <EditText
                android:id="@+id/name"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:cursorVisible="false"
                android:editable="false"
                android:clickable="false"
                android:hint="name"/>

            <EditText
                android:id="@+id/email"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:editable="false"
                android:clickable="false"
                android:hint="Email"/>

            <EditText
                android:id="@+id/password"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:inputType="textPassword"
                android:visibility="gone"
                android:editable="false"
                android:clickable="false"
                android:hint="password"/>

            <EditText
                android:id="@+id/doc_specify"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:editable="false"
                android:clickable="false"
                android:hint="Speciality"/>

            <EditText
                android:id="@+id/doc_hos"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:editable="false"
                android:clickable="false"
                android:hint="Hospital"/>

            <EditText
                android:id="@+id/doc_tariff"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:editable="false"
                android:clickable="false"
                android:hint="Consultancy Fee"/>

            <EditText
                android:id="@+id/doc_holiday"
                style="@style/edit_text_style"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:editable="false"
                android:clickable="false"
                android:hint="Holiday"/>

            <TextView
                android:id="@+id/doc_date_st"
                style="@style/edit_text_style"
                android:clickable="false"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="Start Date"/>

            <TextView
                android:id="@+id/doc_date_en"
                style="@style/edit_text_style"
                android:clickable="false"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="End Date"/>

            <TextView
                android:id="@+id/doc_time_st"
                style="@style/edit_text_style"
                android:clickable="false"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="Start Time"/>
            <TextView
                android:id="@+id/doc_time_end"
                style="@style/edit_text_style"
                android:clickable="false"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="End Time"/>


            <EditText
                android:id="@+id/mobile"
                style="@style/edit_text_style"
                android:visibility="gone"
                android:inputType="number"
                android:clickable="false"
                android:editable="false"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="Mobile"/>

            <EditText
                android:id="@+id/adress"
                style="@style/edit_text_style"
                android:visibility="visible"
                android:editable="false"
                android:clickable="false"
                android:layout_marginTop="@dimen/content_vertical_margin"
                android:hint="Address"/>




        </LinearLayout>


    </ScrollView>



</RelativeLayout>

